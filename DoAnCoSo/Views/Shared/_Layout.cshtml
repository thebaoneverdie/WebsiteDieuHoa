<body>

    <div class="hero_area">
        <!-- header section strats -->
        <header class="header_section long_section px-0">
            <nav class="navbar navbar-expand-lg custom_nav-container ">
                <a class="navbar-brand" href="/Home/Index">
                    <span>
                        Edgecut
                    </span>
                </a>

                @using (Html.BeginForm("Index", "Shop", FormMethod.Get))
                {
                    @Html.TextBox("searchString")
                    <input type="submit" value="Search" placeholder="Search" class="search" />
                }
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class=""> </span>
                </button>



                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <div class="d-flex mx-auto flex-column flex-lg-row align-items-center">
                        <ul class="navbar-nav  ">
                            <li class="nav-item active">
                                <a class="nav-link" href="/Home/Index">Trang chủ <span class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#about"> Giới thiệu</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Shop/Index">Sản phẩm</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#contact">Liên hệ</a>
                            </li>
                        </ul>
                    </div>

                    @if (Session["idUser"] != null)
                    {
                        string admin = (string)Session["Role"];
                        if (admin.CompareTo("Admin") == 0)
                        {

                            <div class="dropdown-menu">
                                <a>Hello @Session["FullName"]</a>
                                <div class="dropdown-content">
                                    <a href="/Admin/Manager/Index">Quản lý</a>
                                    @*@Html.ActionLink("Admin", "Home", "Admin", new { area = "Admin" })*@
                                    @Html.ActionLink("Đổi mật khẩu", "ChangePassword", "Account")
                                    @Html.ActionLink("Đăng xuất", "LogOff", "Account")
                                </div>
                            </div>
                        }
                        else
                        {
                            @*<a>@{Html.RenderAction("CartSumary", "ShoppingCart"); }</a>*@

                            <a href="">
                                <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                            </a>
                            <div class="dropdown-menu">
                                <a>Xin Chào @Session["FullName"]</a>
                                <div class="dropdown-content">
                                    @Html.ActionLink("Tra cứu đơn hàng","CheckOrder_User","Shop")
                                    @Html.ActionLink("Đổi mật khẩu", "ChangePassword", "Account")
                                    @Html.ActionLink("Đăng xuất", "LogOff", "Account")
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="quote_btn-container">
                            <a href="/Account/DangNhap">
                                <span>
                                    Đăng nhập
                                </span>
                                <i class="fa fa-user" aria-hidden="true"></i>
                            </a>
                        </div>
                    }


                </div>
            </nav>
        </header>
